<% layout("/layouts/generalBoilerplate")%>

<link rel="stylesheet" href="/css/ngoAndGov.css">

<h2 class="mb-5 mt-3">All Requests (NGO / Government)</h2>


<div >
        <table >
            <thead>
                <tr>
                    <th>Username </th>
                    <th>Location </th>
                    <th>Status </th>
                    <th>Action </th>
                </tr>
            </thead>
            <tbody>
                <% if(allRequests && allRequests.length > 0) { %>
                    <% for(let i = 0; i < allRequests.length; i++) { %>
                        <tr>
                            <td><%= allRequests[i].requester.username%></td>
                            <td><%= allRequests[i].location %></td>
                            <td><%= allRequests[i].status %></td>
                            <td><a href="/helpVictim/<%= allRequests[i]._id%>">Help</a></td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    
<div>
        

