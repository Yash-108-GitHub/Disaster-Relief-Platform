<% layout("/layouts/generalBoilerplate")%>
<br><br>
<div class="row">
    <div class="col col-6 offset-3">
        <h3>Submit Help Request</h3>
        <form method="post" action="/help-requests" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="Water" class="form-label">Water coverage (%)</label>
                <input name="waterCoverage" id="Water" placeholder="eg:30%" type="number" class="form-control" required/>
                <div class="valid-feedback">please enter percentage of water coverage</div>
            </div>
            <!-- ----------------------------------- -->
            <div class="mb-3">
                <label for="victim" class="form-label">victim count</label>
                <input name="victimCount" id="victim"  type="number" class="form-control" required/>
                <div class="valid-feedback">please enter how many peoples are affected</div>
            </div>
            <!-- ------------------------------------ -->
             <div class="mb-3">
                <label for="fire" class="form-label">Fire presence (Yes/No)</label>
                <input name="firePresence" id="fire"  type="text" class="form-control" required/>
                <div class="valid-feedback">please choose something!</div>
            </div>
            <!-- -------------------------------------- -->
             <div class="mb-3">
                <label for="damage" class="form-label">damage level (low , morderate , high )</label>
                <input name="damageLevel" id="damage" type="text" class="form-control" required/>
                <div class="valid-feedback"></div>
            </div>
            <!-- -------------- -->
             <div class="mb-3">
                <label for="location" class="form-label">location</label>
                <input name="location" id="location" placeholder="nagpur,india%" type="text" class="form-control" required/>
                <div class="valid-feedback">please enter valid location</div>
            </div>
            <!-- --------------- --> 
             <div class="mb-3">
                <label for="Image" class="form-label">Upload Image</label>
                <input name="image" id="Image"  type="text" class="form-control" required/>
                <div class="valid-feedback"></div>
            </div>
            <!-- -------------- -->
             <div class="mb-3">
                <label for="resource" class="form-label">Resource Need</label>
                    <div class="resource">
                        <input name="resourcesNeeded.food" class="form-check-input" type="checkbox" value="Yes" id="food">
                        <label class="form-check-label" for="food">üçö Food</label>
                    </div>

                    <div class="resource">
                        <input name="resourcesNeeded.water" class="form-check-input" type="checkbox" value="Yes" id="water">
                        <label class="form-check-label" for="water">üíß Water</label>
                    </div>                
                    <div class="resource">
                        <input name="resourcesNeeded.shelter" class="form-check-input" type="checkbox" value="Yes" id="shelter">
                        <label class="form-check-label" for="shelter">‚õ∫ Shelter</label>
                    </div>

                    <div class="resource">
                        <input name="resourcesNeeded.medical" class="form-check-input" type="checkbox" value="Yes" id="medical">
                        <label class="form-check-label" for="medical">ü©∫ Medical</label>
                    </div>

                    <div class="resource">
                        <input name="resourcesNeeded.rescue" class="form-check-input" type="checkbox" value="Yes" id="rescue">
                        <label class="form-check-label" for="rescue">üöÅ Rescue</label>
                    </div>

                <div class="valid-feedback"></div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>


 
